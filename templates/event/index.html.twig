{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div class="row mt-4 mb-3">
        <div class="col-md-10 offset-md-1">
            <h2 class="text-danger"><i class="fas fa-theater-masks"></i> Events in Vienna</h2>
            <p class="text-danger">Search over 10000 Events in Vienna</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center">
            <a href="{{ path('event_new') }}" class="btn btn-white btn-sm text-danger text-uppercase my-2"><i class="far fa-plus-square fa-3x"></i><br>Create new</a>
            <a href="#" class="btn btn-white btn-sm text-danger text-uppercase my-2"><i class="fas fa-map-marked-alt fa-3x"></i><br>Map</a>
            <a href="#" class="btn btn-white btn-sm text-danger text-uppercase my-2"><i class="fas fa-info fa-3x"></i><br>Info</a>
            <a href="#" class="btn btn-white btn-sm text-danger text-uppercase my-2"><i class="fas fa-bed fa-3x"></i><br>Hotels</a>
            <a href="#" class="btn btn-white btn-sm text-danger text-uppercase my-2"><i class="fas fa-theater-masks fa-3x"></i><br>Events</a>
        </div>

        <div class="col-md-8">
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12">
                    <p>Due to COVID-19, cultural and leisure facilities such as museums, zoos, amusement parks, theaters, concert halls, cinemas and cabarets, as well as all restaurants and hotels are currently closed until the beginning of December.</p>
                </div>
            </div>

            <div class="row mb-5">

                {% for event in events %}
                    <div class="col-md-4 p-2 mb-2">

                        <a href="{{ path('event_show', {'id': event.id}) }}"><img src="{{ asset(event.image) }}" class="img-fluid rounded-lg my-2" alt="{{ event.name }}"/></a>

                        <h4><a href="{{ path('event_show', {'id': event.id}) }}" class="text-danger text-decoration-none">{{ event.name }}</a></h4>
                        <p>{{ event.datetime ? event.datetime|date('D, M j, Y, H:i') : '' }} Hr.</p>
                        <p>{{ event.address }}</p>

                        <p>
                            <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-danger btn-sm m-1">Show</a>
                            <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-danger btn-sm m-1">Edit</a>
                        </p>
                    </div>
                {% else %}
                    <div class="col-md-12">
                        <h3 class="text-danger">No records found</td>
                    </div>
                {% endfor %}

            </div>
            <!-- End Main Content -->
        </div>

        <div class="col-md-3">
            <div class="alert alert-secondary p-4" role="alert">
                <h4 class="text-danger">Event Search</h4>
                <form class="mb-4">
                    <input class="form-control my-1" type="search" placeholder="Event &amp; Location" aria-label="Search">
                    <button class="btn btn-danger my-1" type="submit">Search</button>
                </form>
                <h4 class="text-danger">Downloads</h4>
                <p><a href="#" class="text-decoration-none text-danger"><i class="fas fa-file-pdf"></i> Program October-December 2020</a></p>
                <p><a href="#" class="text-decoration-none text-danger"><i class="fas fa-file-pdf"></i> Event-Highlights 2020/21</a></p>
            </div>
        </div>
    </div>
{% endblock %}
